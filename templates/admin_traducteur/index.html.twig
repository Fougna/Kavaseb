{% extends 'base.html.twig' %}

{% block title %}Traducteur index{% endblock %}

{% block body %}
    <h1>Traducteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Profession</th>
                <th>Importance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for traducteur in traducteurs %}
            <tr>
                <td>{{ traducteur.id }}</td>
                <td>{{ traducteur.profession }}</td>
                <td>{{ traducteur.importance }}</td>
                <td>
                    <a href="{{ path('admin_traducteur_show', {'id': traducteur.id}) }}">show</a>
                    <a href="{{ path('admin_traducteur_edit', {'id': traducteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_traducteur_new') }}">Create new</a>
{% endblock %}
