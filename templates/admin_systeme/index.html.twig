{% extends 'base.html.twig' %}

{% block title %}Systeme index{% endblock %}

{% block body %}
    <h1>Systeme index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Annee</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for systeme in systemes %}
            <tr>
                <td>{{ systeme.id }}</td>
                <td>{{ systeme.nom }}</td>
                <td>{{ systeme.image }}</td>
                <td>{{ systeme.annee ? systeme.annee|date('Y-m-d') : '' }}</td>
                <td>{{ systeme.description }}</td>
                <td>
                    <a href="{{ path('admin_systeme_show', {'id': systeme.id}) }}">show</a>
                    <a href="{{ path('admin_systeme_edit', {'id': systeme.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_systeme_new') }}">Create new</a>
{% endblock %}
