{% extends 'base.html.twig' %}

{% block title %}Musique index{% endblock %}

{% block body %}
    <h1>Musique index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TitreOriginal</th>
                <th>SurTitreOriginal</th>
                <th>SousTitreOriginal</th>
                <th>TitreFrancais</th>
                <th>SurTitreFrancais</th>
                <th>SousTitreFrancais</th>
                <th>Image</th>
                <th>Annee</th>
                <th>Duree</th>
                <th>Genre</th>
                <th>Chronologie</th>
                <th>NoteMusique</th>
                <th>Art</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for musique in musiques %}
            <tr>
                <td>{{ musique.id }}</td>
                <td>{{ musique.titreOriginal }}</td>
                <td>{{ musique.surTitreOriginal }}</td>
                <td>{{ musique.sousTitreOriginal }}</td>
                <td>{{ musique.titreFrancais }}</td>
                <td>{{ musique.surTitreFrancais }}</td>
                <td>{{ musique.sousTitreFrancais }}</td>
                <td>{{ musique.image }}</td>
                <td>{{ musique.annee ? musique.annee|date('Y-m-d') : '' }}</td>
                <td>{{ musique.duree }}</td>
                <td>{{ musique.genre }}</td>
                <td>{{ musique.chronologie }}</td>
                <td>{{ musique.noteMusique }}</td>
                <td>{{ musique.art }}</td>
                <td>
                    <a href="{{ path('musique_liste_show', {'id': musique.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}